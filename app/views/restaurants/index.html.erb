<div class="container">
  <h1>All my restaurants</h1>
  <% @restaurants.each do |restaurant| %>
  <h3><%= restaurant.name %></h3>
  <p><%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%></p>
  <p><%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-warning"%></p>
  <% end %>
</div>
